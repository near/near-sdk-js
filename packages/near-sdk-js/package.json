    "@types/node": "17.0.45",
    "@types/rollup": "0.54.0",
    "@types/signale": "1.4.7",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "chalk": "5.3.0",
    "eslint": "8.54.0",
    "eslint-config-prettier": "8.10.0",
    "json5": "2.2.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "typescript": "4.7.4"
  }
